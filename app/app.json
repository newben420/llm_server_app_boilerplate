{
  "expo": {
    "name": "app",
    "slug": "app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#009300"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "ExpoLocalization_supportsRTL": true
      },
      "bundleIdentifier": "com.newben420.aiapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.newben420.aiapp"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "package": "com.newben420.aiapp"
    },
    "plugins": [
      "expo-font",
      "expo-localization",
      "expo-sqlite",
      "expo-secure-store",
      "expo-notifications"
    ],
    "locales": {
      "en": "./locales/en.json"
    },
    "extra": {
      "supportsRTL": true,
      "PRODUCTION": false,
      "PROD": {},
      "DEV": {
        "BRAND": "AiApp",
        "DB_NAME": "mydb.db",
        "SPLASH_TIME_MS": 500,
        "PAGE_REFRESH_INTERVAL_MS": 5000,
        "BORDER_RADIUS": 15,
        "TRANSITION_MS": 300,
        "APP_URL": "https://example.com",
        "DEVELOPER": "Malver",
        "RELEASE_YEAR": 2025,
        "API_BASE": "http://172.20.10.2:4000/api",
        "API_TIMEOUT_MS": 30000
      }
    },
    "owner": "newben420",
    "updates": {
      "enabled": true
    }
  }
}
